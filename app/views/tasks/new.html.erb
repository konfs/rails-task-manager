<h1>Create New Task</h1>

<%= form_for(@task) do |f| %>
    <%= f.label :title %> <br>
    <%= f.text_field :title %> <br>
    <%= f.label :details %> <br>
    <%= f.text_field :details %> <br>
    <%= f.label :completed %> <br>
    <%= f.check_box :completed %> <br>
    <%= f.submit %>
<% end %>
<hr>
<%= link_to 'back to list', tasks_path %>